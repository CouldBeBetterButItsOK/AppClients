<Application x:Class="WPF_MVVM_SPA_Template.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_MVVM_SPA_Template.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Views/Themes/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:EnableButtonConverter x:Key="EnableButtonConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
